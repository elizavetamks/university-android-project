<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fon">





    <TextView

        android:id="@+id/activity_ifkst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10sp"
        android:layout_marginLeft="20sp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:elegantTextHeight="true"
        android:gravity="center"
        android:text="Институт физической культуры, спорта и туризма"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:textStyle="bold" />





    <TextView
        android:id="@+id/activity_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Добро пожаловать на платформу института физической культуры, спорта и туризма Санкт-Петербургского Политехнического университета Петра Великого. Это приложение призвано помочь тебе с прохождением курса физической культуры."
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/activity_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_FIO"
        android:gravity="center"
        android:text="@string/student"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/activity_FIO"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@id/activity_info"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:text="@string/student_name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_centerVertical="true"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_sk"
        android:layout_below="@id/activity_info"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"

        />

</RelativeLayout>

