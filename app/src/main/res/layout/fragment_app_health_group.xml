<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fon"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_text1_gz_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:text="Выберите группу здоровья\n и приложите документ"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_name_gz_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="Группа здоровья:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/activity_doc_gz_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:text="Подтверждающий документ:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/activity_choose_gz_but_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:text="Выберите файл"
                android:elegantTextHeight="true"
                android:textSize="14sp"
                android:textColor="@color/mygrey"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activity_text2_gz_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:text="@string/text_gz"
                android:textColor="@color/mygrey"
                android:textSize="14dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkbox_soglasie"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="10dp"
                android:elegantTextHeight="true"/>

            <TextView
                android:id="@+id/activity_bird_gz_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"
                android:text="Согласие на обработку \nперсональных данных"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/activity_save_gz_but_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:text="Сохранить"
                android:textSize="15sp"
                android:background="@color/button"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>